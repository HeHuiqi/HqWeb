    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hhq.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>
